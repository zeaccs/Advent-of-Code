module Day03 exposing (main)

import Array exposing (Array)
import Html exposing (Html, text)


main : Html msg
main =
    -- partOne map
    partTwo map
        |> Debug.toString
        |> text


partOne : List ( Int, Array Char ) -> Int
partOne =
    tobogganRuns width 3 1


partTwo : List ( Int, Array Char ) -> Int
partTwo m =
    tobogganRuns width 1 1 m
        * tobogganRuns width 3 1 m
        * tobogganRuns width 5 1 m
        * tobogganRuns width 7 1 m
        * tobogganRuns width 1 2 m


getElementBySlope : Int -> Int -> Int -> Int
getElementBySlope w r d =
    remainderBy w (r * d)


tobogganRuns : Int -> Int -> Int -> List ( Int, Array Char ) -> Int
tobogganRuns w r d =
    List.foldl
        (\( i, x ) ( step, count ) ->
            if i == step then
                case Array.get (getElementBySlope w r (step // d)) x of
                    Just char ->
                        if char == '#' then
                            ( step + d, count + 1 )

                        else
                            ( step + d, count )

                    Nothing ->
                        ( step + d, count )

            else
                ( step, count )
        )
        ( 0, 0 )
        >> Tuple.second


map : List ( Int, Array Char )
map =
    String.lines input
        |> List.indexedMap
            (\i x ->
                ( i, Array.fromList (String.toList x) )
            )


width : Int
width =
    case List.head map of
        Just ( _, x ) ->
            Array.length x

        Nothing ->
            0


